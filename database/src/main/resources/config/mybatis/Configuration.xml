<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <setting name="mapUnderscoreToCamelCase" value="true" />
    </settings>
<typeAliases>
    <typeAlias alias="User" type="lzhw.model.User"/>
    <typeAlias alias="Seat" type="lzhw.model.Seat"/>
    <typeAlias alias="Station" type="lzhw.model.Station"/>
    <typeAlias alias="Ticket" type="lzhw.model.Ticket"/>
    <typeAlias alias="Train" type="lzhw.model.Train"/>
    <typeAlias alias="TrainStation" type="lzhw.model.TrainStation"/>
</typeAliases>

<environments default="development">
    <environment id="development">
        <transactionManager type="JDBC"/>
        <dataSource type="POOLED">
            <property name="driver" value="com.mysql.jdbc.Driver"/>
            <property name="url" value="jdbc:mysql://127.0.0.1:3306/lzhw?useUnicode=true&amp;characterEncoding=UTF-8" />
            <property name="username" value="root"/>
            <property name="password" value="123456"/>
        </dataSource>
    </environment>
</environments>

<mappers>
    <mapper resource="config/mybatis/User.xml"/>
    <mapper resource="config/mybatis/Seat.xml"/>
    <mapper resource="config/mybatis/Station.xml"/>
    <mapper resource="config/mybatis/Ticket.xml"/>
    <mapper resource="config/mybatis/Train.xml"/>
    <mapper resource="config/mybatis/TrainStation.xml"/>
</mappers>

</configuration>